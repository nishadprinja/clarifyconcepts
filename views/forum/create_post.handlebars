<div id="create-post">

	<h3>Create New Post</h3>

	<form action="/forum/{{forums}}" method="POST">

		<input type="hidden" name="forum_id" value="{{forums}}">
		<input type="hidden" name="user_id" value="{{user}}">
		
		<div class="topic">
			<label for="topic">
				<input type="text" name="topic" placeholder="enter topic..">
			</label>
		</div>
		
		<div class="content">
			<label for="content">
				<textarea type="text" name="content"></textarea>
			</label>
		</div>
		
		<input type="submit" value="Submit">
		
	</form>
	
</div>